<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.pvr.appinstallhelper.CustomRoundAngleImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:background="@mipmap/ic_launcher"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pico APP INSTALL TEST" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/AVLIV_installing"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:indicatorColor="@color/color_PacmanIndicator"
            app:indicatorName="BallSpinFadeLoaderIndicator" />

        <TextView
            android:id="@+id/tv_app_install_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/install_succeeded" />
    </RelativeLayout>

</LinearLayout>